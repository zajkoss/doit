<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="12dp"
        android:layout_gravity="center_vertical"
        >



        <TextView
            android:id="@+id/time_listitem"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"/>

        <TextView
            android:id="@+id/priority_listitem"
            android:textSize="10dp"
            android:background="@android:color/holo_red_dark"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="A"
            android:textColor="@android:color/white"/>

    </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:textSize="12dp"

                style="@style/TaskDecription"
                android:id="@+id/task_listitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zadanie"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/circle_listitem_main"
                    android:background="@drawable/project_circle_listview"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginRight="4dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="9dp"
                    android:id="@+id/project_listview"
                    style="@style/ProjectLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="project"/>



            </LinearLayout>




    </LinearLayout>

